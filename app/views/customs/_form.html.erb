<%= form_with(model: custom, local: true) do |form| %>
  <% if custom.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(custom.errors.count, "error") %> prohibited this custom from being saved:</h2>

      <ul>
      <% custom.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>





  
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">

  <link rel='stylesheet' href='http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css'>
  <link rel="stylesheet" href="/assets/customs.css">

    

  


<div class="break">

  
<div class="containero">
  <form>
    <div class="row">
      <h4>Customize It . The Way You Want to!!</h4>
      <div class="input-group input-group-icon">
        <%= form.text_field :name, id: :custom_name, :required => true, placeholder: "Full Name" %>
        <div class="input-icon"><i class="fa fa-user"></i></div>
      </div>
      <div class="input-group input-group-icon">
        <%= form.text_field :email, id: :custom_email, :required => true, placeholder: "Email Address" %>
        <div class="input-icon"><i class="fa fa-envelope"></i></div>
      </div>
      <div class="input-group input-group-icon">
        <%= form.text_field :phone, id: :custom_phone, :required => true, placeholder: "Mobile Number" %>
        <div class="input-icon"><i class="fa fa-phone"></i></div>
      </div>

      <div class="input-group input-group-icon">
         <%= form.text_field :city, id: :custom_city, :required => true, placeholder: "Your City" %>
        <div class="input-icon"><i class="fa fa-map"></i></div>
      </div>
    </div>
    <div class="row">
      <div class="col-half">
        <h4>Ask us any questions, or tell us about your inspiration</h4>
        <div class="input-group">
          <div class="input-group input-group-icon">
         <%= form.text_area :info, id: :custom_info, placeholder: "Any Other Info" %>
        <div class="input-icon"><i class="fa fa-info"></i></div>
      </div>
        </div>
      </div>
      <div class="col-half">
        <h4>More infos about the furniture</h4>
        <div class="input-group">
         <div class="input-group input-group-icon">
         <%= form.text_field :dimension, id: :custom_dimension, placeholder: "Dimensions" %>
        <div class="input-icon"><i class="fa fa-percent"></i></div>
      </div>
        </div>
      </div>
    </div>





    <div class="input-group input-group-icon">
        <%= form.text_field :wood, placeholder: "Wood (if not sure leave this on us!" %>
        <div class="input-icon"><i class="fa fa-wrench"></i></div>
      </div>

    <div class="input-group input-group-icon">
         <%= form.text_field :polish, placeholder: "Polish (if not sure leave this on us!" %>
        <div class="input-icon"><i class="fa fa-paint-brush"></i></div>
      </div>

      <div class="input-group input-group-icon">Choose a photo or a sketch
         <%= form.file_field :cimage %>

        <div class="input-icon" style="padding-top: 20px;"><i class="fa fa-file"></i></div>
      </div>
    
    <div class="row">
      <h4>Terms and Conditions</h4>
      <div class="input-group">
        <input type="checkbox" id="terms"/>
        <label for="terms">I accept the terms and conditions for signing up to this service, and hereby confirm I have read the privacy policy.</label>
      </div>
    </div>
      <div class="actions">
    <%= form.submit %>
  </div>
     <% end %>

  </form>
</div>
  <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>





</div>



